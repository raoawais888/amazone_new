<%- include("../partials/header.ejs") %> <%-
include("../partials/sidebar.ejs") %>
<div class="main-content">
 
    <section class="section">
        <div class="section-body">
          <div class="invoice">
            <div class="invoice-print">
              <div class="row">
                <div class="col-lg-12">
                  <div class="invoice-title">
                    <h2>Order Invoice</h2>
                    <div class="invoice-number">Order #<%= order  %></div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-md-6">
                      <address>
                        <strong>Billed To:</strong><br>
                        <%= order_detail.user_id.name %><br>
                         <%= checkout.address  %>
                      </address>
                    </div>
                    <div class="col-md-6 text-md-right">
                      <address>
                        <strong>Shipped To:</strong><br>
                         
                        Dubai

                      </address>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <address>
                        <strong>Payment Method:</strong><br>
                        cash on delivery<br>
                        <%=order_detail.user_id.email   %>
                      </address>
                    </div>
                    <div class="col-md-6 text-md-right">
                      <address>
                        <strong>Order Date:</strong><br>
                       <%=CurrentDate  %><br><br>
                      </address>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mt-4">
                <div class="col-md-12">
                  <div class="section-title">Order Summary</div>
                  <p class="section-lead">All items here cannot be deleted.</p>
                  <div class="table-responsive">
                    <table class="table table-striped table-hover table-md">
                      <tbody><tr>
                        <th data-width="40" style="width: 40px;">#</th>
                        <th>Item</th>
                        <th class="text-center">Price</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-right">Totals</th>
                      </tr>

                      <% let sr =1 %>
                      <% cart.forEach(data=>{ %>
                            
                        <tr>
                            <td><%= sr++  %></td>
                            <td> <%= data.item.name  %></td>
                            <td class="text-center">$ <%= data.item.price  %> </td>
                            <td  class="text-center"><%= data.qty %></td>

                            <td  class="text-right"> $<%= data.qty * data.item.price  %>  </td>
                          </tr>
                    
                    <% })%>
                      
                    </tbody></table>
                  </div>
                  <div class="row mt-4">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-4 text-right">
                      <div class="invoice-detail-item">
                        <div class="invoice-detail-name">Subtotal</div>
                        <div class="invoice-detail-value">$<%= cartSession.totalPrice  %></div>
                      </div>
                      <div class="invoice-detail-item">
                        <div class="invoice-detail-name">Shipping</div>
                        <div class="invoice-detail-value">$500</div>
                      </div>
                      <hr class="mt-2 mb-2">
                      <div class="invoice-detail-item">
                        <div class="invoice-detail-name">Total</div>
                        <div class="invoice-detail-value invoice-detail-value-lg">$<%= cartSession.totalPrice  + 500  %></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <hr>
            <div class="text-md-right">
              <div class="float-lg-left mb-lg-0 mb-3">
                <button class="btn btn-primary btn-icon icon-left"><i class="fas fa-credit-card"></i> Process
                  Payment</button>
                <button class="btn btn-danger btn-icon icon-left"><i class="fas fa-times"></i> Cancel</button>
              </div>
              <button class="btn btn-warning btn-icon icon-left"><i class="fas fa-print"></i> Print</button>
            </div>
          </div>
        </div>
      </section>
</div>
<%- include("../partials/footer.ejs") %>
