<%- include("../../partials/header.ejs") %>
<%- include("../../partials/sidebar.ejs") %>
<div class="main-content">
  <section class="section">
    <div class="section-body">
      <div class="row">
        <div class="col-12 col-md-12 col-lg-12">
          <div class="card">
            <div class="card-header">
              <h4>Edit Category</h4>
            </div>
               <% if(message.success){ %>
    <div class="alert alert-success"><%= message.success %></div>
    <% }else if(message.fail) { %>
    <div class="alert alert-danger"><%= message.fail %></div>
    <% } %>
            <div class="card-body">
              <form action="/admin/edit-category/<%= category._id%>" method="post" >
                <div class="form-group">
                  <label>Category Name</label>
                  <div class="input-group">
                    <input type="hidden" name="old_image" value="<%= category.image %>">

                    <input type="hidden" name="cat_id" value="<%= category._id %>">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fa fa-list-alt"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="categoryName" value="<%= category.name %>"/>
                  </div>
                  <label class="mt-3">Brand Name</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fa fa-list-alt"></i>
                      </div>
                    </div>

                    <select name="brand" class="form-control">
                      <% brands.forEach((data)=>{ %>
                              
                        <% if(data.name == category.brand.name){ %>
                       <option value="<%= data._id %>" selected><%= data.name %></option>
                       <% }else{ %>

                        <option value="<%= data._id %>"><%= data.name %></option>

                      <% } })  %>
                    </select>
                             
                  </div>
                  
                <button type="submit" class="btn btn-primary mt-3">Update</button>
                <button type="reset" class="btn btn-danger mt-3">Reset</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<%- include("../../partials/footer.ejs") %>
